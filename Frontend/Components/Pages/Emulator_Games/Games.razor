@page "/games"
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Games</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom Styles -->
    <link rel="stylesheet" href="../Components/Pages/Emulator_Games/Games.css">
</head>
<body>
<div class="container small">
    <h1 class="text-center mt-3">Games</h1>
    <!-- File Selection Form -->
    <form id="gameForm">
        <div class="form-group">
            <label for="gameFile">Select game file:</label>
            <input type="file" class="form-control-file" id="gameFile" accept=".nes,.sfc,.smc,.gb,.gbc,.gba,.gen,.bin">
        </div>
        <button type="submit" class="btn btn-primary">Load Game</button>
    </form>

    <ul class="nav nav-tabs" id="emulatorTabs">
        <li class="nav-item">
            <button class="nav-link active" data-emulator="nes">NES</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-emulator="snes">SNES</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-emulator="gbc">GBC</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-emulator="gba">GBA</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-emulator="genesis">Genesis</button>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade show active">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Game</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div id="emulatorContainer"></div>
</div>
<script src="~/libs/nostalgist.js"></script>
</body>
</html>
