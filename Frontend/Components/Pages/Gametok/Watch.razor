@page "/gametok/watch/{Id:guid?}"
@using ESOF.WebApp.WebAPI.DtoClasses.Create
@using ESOF.WebApp.WebAPI.DtoClasses.Response
@using Frontend.Helpers
@inject ApiHelper ApiHelper
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Gametok</PageTitle>


@if (Id == null && videos.Count == 0)
{
    <p>Loading random video...</p>
}else @if (videos.Count == 0)
{
    <p>Loading video...</p>
}
else
{
<div class="main">

    @foreach (var video in videos)
    {
        <div class="video">
            <video
                src="@video.videopath"
                type="video/mp4"
                controls loop autoplay>
            </video>

            <div class="caption-box">
                <div class="caption">@video.caption</div>
                <div class="description">Quest: @video.description</div>
            </div>
        </div>

        <div class="info">
            <button class="icon-button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
