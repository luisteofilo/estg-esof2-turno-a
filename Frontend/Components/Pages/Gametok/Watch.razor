            </div>

            <div class="button">
                <button class="icon-button">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                        <!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
                        <path d="M512 240c0 114.9-114.6 208-256 208c-37.1 0-72.3-6.4-104.1-17.9c-11.9 8.7-31.3 20.6-54.3 30.6C73.6 471.1 44.7 480 16 480c-6.5 0-12.3-3.9-14.8-9.9c-2.5-6-1.1-12.8 3.4-17.4l0 0 0 0 0 0 0 0 .3-.3c.3-.3 .7-.7 1.3-1.4c1.1-1.2 2.8-3.1 4.9-5.7c4.1-5 9.6-12.4 15.2-21.6c10-16.6 19.5-38.4 21.4-62.9C17.7 326.8 0 285.1 0 240C0 125.1 114.6 32 256 32s256 93.1 256 208z"/>
                    </svg>
                </button>
                <p>@video.comments.Count</p>
            </div>

            <a class="icon-button" href="/gametok/upload/@video.videoquestid">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                    <!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
                    <path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z"/>
                </svg>
            </a>
        </div>
    }
</div>
}

@code {
    [Parameter]
    public Guid? Id { get; set; }

    private List<ResponseVideoDto> videos = new List<ResponseVideoDto>();
    private Dictionary<Guid, bool> likeStatus = new Dictionary<Guid, bool>();
    private bool moreVideosAvailable = true;
    private bool isLoading = false;
    private Guid tempuser = Guid.Parse("03b77560-c0b8-459a-9069-5d97f60270a5");

    protected override async Task OnInitializedAsync()
    {
        await LoadVideos();
    }

    private async Task LoadVideos()
    {
        isLoading = true;
        if (Id != null)
        {
            var video = await ApiHelper.GetFromApiAsync<ResponseVideoDto>($"Gametok/video/{Id}");
            if (video != null)
            {
                var isLiked = await ApiHelper.GetFromApiAsync<bool>($"Gametok/Like/{video.videoid}/{tempuser}");
                likeStatus[video.videoid] = isLiked;
                videos.Add(video);
            }
        }
        else
        {
            var video = await ApiHelper.GetFromApiAsync<ResponseVideoDto>($"Gametok/video/random");
            if (video != null)
            {
                Id = video.videoid;
                var isLiked = await ApiHelper.GetFromApiAsync<bool>($"Gametok/Like/{video.videoid}/{tempuser}");
                likeStatus[video.videoid] = isLiked;
                videos.Add(video);
            }
        }
        isLoading = false;
        await IncrementViewCount();
    }
    
    private async Task IncrementViewCount()
    {
        await ApiHelper.PatchToApiAsync($"Gametok/video/{Id}/increment");
    }
    
    private async Task ToggleLike(Guid videoId)
    {
        if (likeStatus.TryGetValue(videoId, out bool isLiked))
        {
            if (isLiked)
            {
                await ApiHelper.DeleteFromApiAsync<CreateLikeDto>($"Gametok/Like/{videoId}/{tempuser}");
            }
            else
            {
                var likeDto = new CreateLikeDto
                {
                    userid = tempuser,
                    videoid = videoId
                };
                await ApiHelper.PostToApiAsync("Gametok/Like", likeDto);
            }
            likeStatus[videoId] = !isLiked;
        }
    }

}